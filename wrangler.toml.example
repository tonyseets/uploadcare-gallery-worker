# Uploadcare Gallery Worker - Configuration
# Copy this file to wrangler.toml and fill in your values

name = "uploadcare-gallery"
main = "src/index.ts"
compatibility_date = "2024-12-01"
account_id = "your-cloudflare-account-id"
workers_dev = true

# Custom domain (optional) - uncomment after adding DNS record in Cloudflare dashboard
# [[routes]]
# pattern = "attachments.yourdomain.com"
# custom_domain = true

# =============================================================================
# White-Label Configuration
# =============================================================================
# All branding is configured here. Update these values for your company.

[vars]
# CDN hosts allowed (comma-separated for multiple Uploadcare CDNs)
# Find yours in Uploadcare dashboard → Project → CDN CNAME
ALLOWED_CDN_HOSTS = "your-project.ucarecdn.com"

# Company branding
COMPANY_NAME = "Your Company"
COMPANY_URL = "https://yourcompany.com"
WORKER_URL = "https://uploadcare-gallery.your-subdomain.workers.dev"

# Visual branding (accent color for buttons, links, etc.)
BRAND_COLOR = "#000000"
FAVICON_URL = "https://yourcompany.com/favicon.ico"

# Logo: Use LOGO_SVG for inline SVG (preferred) or LOGO_URL for image URL
# If neither is set, COMPANY_NAME will be displayed as text
LOGO_SVG = ""
LOGO_URL = "https://yourcompany.com/logo.png"

# Typography
# Option 1: Use Google Fonts (default) - set font family names
# Browse: https://fonts.google.com
FONT_BODY = "Inter"
FONT_DISPLAY = "Inter"

# Option 2: Use custom fonts - set FONT_CSS_URL to your font CSS file
# This skips Google Fonts entirely. Host your CSS on any CDN (R2, S3, etc.)
# Your CSS should define @font-face rules for the families named above.
# FONT_CSS_URL = "https://yourcdn.com/fonts/brand-fonts.css"

# Behavior
# Card click behavior: "lightbox" (default), "download", or "open"
# - "lightbox": Opens image/video in fullscreen modal (falls back to download if lightbox disabled)
# - "download": Downloads the file directly
# - "open": Opens file in new tab
# MAIN_ACTION = "lightbox"

# Optional accent colors (uncomment to customize)
# SUCCESS_COLOR = "#16a34a"  # Success/confirmation states (default: green)
# LINK_HOVER_COLOR = "#0066FF"  # Link hover color (default: inherit = no change)

# Theme colors (all optional - defaults to light theme)
# Customize these for dark themes or brand-specific styling
# BG_COLOR = "#ffffff"              # Page background
# PANEL_COLOR = "#f9fafb"           # Panel/card backgrounds
# SURFACE_COLOR = "#f3f4f6"         # Interactive surfaces (hover states, etc.)
# BORDER_COLOR = "#e5e7eb"          # Borders
# TEXT_COLOR = "#111827"            # Primary text
# TEXT_SECONDARY_COLOR = "#6b7280"  # Secondary text
# TEXT_MUTED_COLOR = "#9ca3af"      # Muted/subtle text
# HEADER_BG = "#ffffffcc"           # Header background (8-digit hex for alpha)

# CDN URLs (optional - sensible defaults provided)
# Self-host JSZip or use an alternative CDN if needed
# If primary URL fails to load, fallback URL will be tried automatically
# JSZIP_URL = "https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"
# JSZIP_FALLBACK_URL = "https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"
# JSZIP_INTEGRITY = ""  # SRI hash for custom JSZIP_URL (default URL has built-in hash, set empty to disable)

# Cache control in seconds (optional - defaults shown)
# CACHE_GALLERY_SECONDS = "3600"           # Gallery page: 1 hour
# CACHE_SCRIPT_BROWSER_SECONDS = "86400"   # Script browser cache: 1 day
# CACHE_SCRIPT_CDN_SECONDS = "604800"      # Script CDN cache: 7 days

# Feature toggles - set to "false" to disable (all enabled by default)
# ENABLE_ZIP_DOWNLOAD = "true"    # Show "Download ZIP" button
# ENABLE_OPEN_ALL = "true"        # Show "Open All in Tabs" button
# ENABLE_SHARE_BUTTON = "true"    # Show "Share" button in header
# ENABLE_LIGHTBOX = "true"        # Enable lightbox for images/videos

# Lightbox preview options
# ENABLE_PDF_PREVIEW = "true"     # Embed PDFs in lightbox iframe (vs show icon)
# ENABLE_AUDIO_PREVIEW = "true"   # Show audio player in lightbox (vs show icon)
# VIDEO_AUTOPLAY = "false"        # Auto-play videos when opened in lightbox

# Gallery layout options
# DEFAULT_GRID_COLUMNS = "2"      # Default columns: "1", "2", "3", or "4"
# IMAGE_FIT = "contain"           # Thumbnail fit: "contain" (letterbox) or "cover" (crop)

# Security limits
# MAX_GROUP_FILE_COUNT = "50"     # Max files allowed in a group URL (default: 50)
